/* pages/rank/rank.wxss */
page{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.div_line{
  background-color: #BBBBBB;
  width: 96%;
  height: 3rpx;
  position: fixed;
}
.rank_head{
  margin-top: 16.3rpx;
  background-color: #313131;
  width: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.rank_head .win_background{
  width: 100%;
  height: 538rpx;
}
.rank_head .win_text{
  position: absolute;
  margin-top: 24rpx;
  font-size: 25.4rpx;
  text-shadow: #000000 0 0 3rpx;
  color: #E7E7E7;
} 
.share{
  position: absolute;
  top: 24rpx;
  right: 48rpx;
  width: 43.5rpx;
}
.share image{
  width: 100%;
}
.share button{
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0.01;
}
.button_hover{
  opacity: 0.9; /* 透明度变化 */
  transform: scale(0.99,0.99);/* 缩放 */
}

.rank_head .user_container{
  margin-top: -25.4rpx;
}
.rank_info{
  position: relative;
  width: 100vw;
  height: 112rpx;
  background-color: #FFFFFF;
  border: 1rpx solid;
  border-color: #E7E7E7;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.rank_info .ranknum_container{
  width: 147.7rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.rank_info .ranknum_container text{
  font-size: 25.4rpx;
  color: #101010;
}
.rank_info .avatar_container{
  width: 155rpx;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.rank_info .avatar_container .image_container{
  width: 67rpx;
  height: 67rpx;
  /* background-color: #313131; */
  border-radius: 50%;
}
.rank_info .avatar_container image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.rank_info .name_container{
  width: 198.4rpx;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.rank_info .name_container text{
  font-size: 25.4rpx;
  color: #101010;
}
.rank_info .score_container{
  margin-left: 161rpx;
  width: 40rpx;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: right;
}
.rank_info .score_container .my_score{
  position: absolute;
  right: 60rpx;
  font-size: 36.2rpx;
  color: #101010;
}
.rank_info .score_container .rank_score{
  position: absolute;
  right: 60rpx;
  font-size: 36.2rpx;
  color: #FFD200;
}

.rank_list{
  width: 100vw;
  margin-top: 10.9rpx;
}